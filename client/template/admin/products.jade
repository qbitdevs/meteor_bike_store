template(name="admin_products")
  +navbar_admin
  .row
    .col.s12
      .collection.z-depth-2
        a#add_products.right.btn-floating.btn-large.waves-effect.waves-light.blue.darken-1.modal-trigger
          i.material-icons add
        unless exist_products
          p.center-align
            br
            h4 No hay productos... 
              i.medium.material-icons directions_bike
            br
        else
          each products
            a.collection-item(href='#!')
              | {{name}}
              span.badge {{quantity}}
              a
                i.material-icons.edit-product edit
              a
                i.material-icons.delete-product delete
            
template(name='edit_product')
  .row
    form.col.s12
      .row
        .input-field.col.s6
          input#product_name.validate(type='text' value='{{params.name}}')
          label(for='product_name' class='active') Nombre
        .input-field.col.s6
          select#product_brands
            option(value='N', disabled='', selected='') Seleccionar marca
            each product_brands
              option(value='{{name}}', selected='{{brand_selected(name)}}') {{name}}
      .row
        .input-field.col.s6
          input#product_cost.validate(type='text' value='{{params.cost}}')
          label(for='product_cost' class='active') Precio
        .input-field.col.s6
          input#product_quantity.validate(type='number' value='{{params.quantity}}')
          label(for='product_quantity' class='active') Cantidad
      .row
        .input-field.col.s6
          select#product_categories
            option(value='N', disabled='', selected='') Seleccionar categoria
            each product_categories
              option(value='{{name}}', selected='{{category_selected(name)}}') {{name}}
        .input-field.col.s3
          input#product_active.validate(type='checkbox' selected='{{params.activated}}')
          label(for='product_active' class='active') Activado
        .input-field.col.s3
          input#product_offer.validate(type='checkbox')
          label(for='product_offer' class='active') Oferta
      .row
        .input-field.col.s12
          textarea#product_description.materialize-textarea
            | {{params.description}}
          label(for='product_description' class='active') Descripci&oacute;n

